            android:id="@+id/tvHomeGoals"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/bubblegum_sans"
            android:text="75%"
            android:textColor="@color/darkest"
